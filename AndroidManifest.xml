<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.heroclix.tournament.pairing"
    android:versionCode="14"
    android:versionName="0.8.6" android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="10" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name=".NodeApplication" >
        <activity
            android:label="@string/app_name"
            android:name="Main" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".judge.JudgeStart" >
        </activity>
        <activity
            android:name=".judge.JudgeRound" >
        </activity>
        <activity android:name=".judge.JudgeFinish" >
        </activity>
        <activity android:name=".archive.History" >
        </activity>
        <activity android:name=".archive.HistoryInfo" >
        </activity>
        <activity android:name=".judge.JudgeEditRound"></activity>
    </application>
</manifest>